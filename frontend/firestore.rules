rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Users collection
    match /users/{userId} {
      // Any authenticated user can read profiles (for public profile pages)
      allow read: if request.auth != null;
      // Users can create their own profile on signup
      allow create: if request.auth != null && request.auth.uid == userId;
      // Users can update their own profile
      allow update: if request.auth != null && request.auth.uid == userId;
      // Users cannot delete their profile
      allow delete: if false;

      // Collection subcollection - users can manage their own card collection
      match /collection/{cardId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow create, update: if request.auth != null && request.auth.uid == userId;
        allow delete: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Decks collection
    match /decks/{deckId} {
      // Anyone can read public decks
      allow read: if resource.data.isPublic == true;
      // Authenticated users can read their own decks
      allow read: if request.auth != null && resource.data.authorId == request.auth.uid;
      // Authenticated users can create decks (must set themselves as author)
      allow create: if request.auth != null && request.resource.data.authorId == request.auth.uid;
      // Users can update their own decks fully
      allow update: if request.auth != null && resource.data.authorId == request.auth.uid;
      // Allow any authenticated user to update only engagement counters (likeCount, viewCount)
      allow update: if request.auth != null
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likeCount', 'viewCount']);
      // Users can only delete their own decks
      allow delete: if request.auth != null && resource.data.authorId == request.auth.uid;

      // Deck version history subcollection - only deck author can manage
      match /versions/{versionId} {
        allow read: if request.auth != null &&
          get(/databases/$(database)/documents/decks/$(deckId)).data.authorId == request.auth.uid;
        allow create, delete: if request.auth != null &&
          get(/databases/$(database)/documents/decks/$(deckId)).data.authorId == request.auth.uid;
        // Versions are immutable snapshots
        allow update: if false;
      }

      // Likes subcollection - users can like/unlike public decks
      match /likes/{userId} {
        allow read: if request.auth != null;
        allow create, delete: if request.auth != null && request.auth.uid == userId;
        allow update: if false;
      }

      // Comments subcollection
      match /comments/{commentId} {
        // Anyone authenticated can read comments on public decks
        allow read: if request.auth != null
          && get(/databases/$(database)/documents/decks/$(deckId)).data.isPublic == true;
        // Authenticated users can add comments to public decks
        allow create: if request.auth != null
          && get(/databases/$(database)/documents/decks/$(deckId)).data.isPublic == true
          && request.resource.data.authorId == request.auth.uid;
        // Users can delete their own comments
        allow delete: if request.auth != null && resource.data.authorId == request.auth.uid;
        allow update: if false;
      }
    }

    // Admins collection - readable by admins to check their own status
    match /admins/{adminId} {
      // Admins can read their own admin record (for frontend permission checks)
      allow read: if request.auth != null && request.auth.uid == adminId;
      // Write operations handled by Cloud Functions only
      allow write: if false;
    }

    // Audit logs collection - read-only access for admins via Cloud Functions
    // Direct access denied, all operations go through Cloud Functions
    match /audit_logs/{logId} {
      allow read, write: if false;
    }

    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
